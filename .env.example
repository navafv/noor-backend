# --- Django Core ---
# IMPORTANT: Generate a new, strong secret key for production
DJANGO_SECRET_KEY=your_secret_key_here
# Set to 1 for development, 0 for production
DJANGO_DEBUG=1
# Comma-separated list of allowed hosts
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# --- Database ---
# If not set, SQLite will be used by default (in development)
# Format: postgres://user:password@host:port/dbname
# DATABASE_URL=postgres://user:password@localhost:5432/noor_db
# Set to 1 if your database requires SSL (common in production)
DATABASE_SSL_REQUIRE=0

# --- Frontend & CORS ---
# URL used for generating links in emails/PDFs (no trailing slash)
FRONTEND_URL=http://localhost:5173
# Comma-separated list of origins allowed to make API requests
CORS_ALLOWED_ORIGINS=http://192.168.1.2:5173,http://localhost:5173,http://127.0.0.1:5173
CSRF_TRUSTED_ORIGINS=http://192.168.1.2:5173,http://localhost:5173,http://127.0.0.1:5173

# --- Authentication (JWT) ---
# Token lifetime in minutes (default 60)
JWT_ACCESS_MIN=60
# Refresh token lifetime in days (default 7)
JWT_REFRESH_DAYS=7

# --- Email (SendGrid) ---
# Required for sending password reset emails
SENDGRID_API_KEY=your_sendgrid_api_key
# The "From" email address
EMAIL_SENDER=no-reply@noorinstitute.com
DEFAULT_FROM_EMAIL=no-reply@noorinstitute.com

# --- Error Tracking (Optional) ---
# Sentry DSN for production error logging
SENTRY_DSN=